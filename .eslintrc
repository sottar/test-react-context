{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": ["react", "flowtype", "prettier"],
  "rules": {
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "comma-dangle": ["error", "always-multiline"],
    "indent": 0,
    "key-spacing": [
      "error",
      {
        "mode": "strict",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "no-console": 1,
    "flowtype/require-valid-file-annotation": [
      2,
      "always"
    ],
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  }
}
